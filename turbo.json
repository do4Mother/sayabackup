{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "@sayabackup/utils#deploy": {
      "outputs": [
        "dist/**"
      ]
    },
    "backend#deploy": {
      "dependsOn": [
        "@sayabackup/utils#deploy",
        "frontend#deploy"
      ]
    },
    "frontend#deploy": {
      "dependsOn": [
        "@sayabackup/utils#deploy"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "deploy": {
      "dependsOn": [
        "deploy"
      ]
    }
  }
}